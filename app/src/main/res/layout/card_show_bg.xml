<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp_dimen">

    <ImageView
        android:id="@+id/tv_show_poster_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_movie" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="#A6000000"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/four_dp_dimen"
        android:paddingLeft="@dimen/ten_dp_dimen"
        android:paddingRight="@dimen/ten_dp_dimen"
        android:paddingTop="@dimen/four_dp_dimen">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart" />

        <TextView
            android:id="@+id/votes_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            tools:text="@string/vote_count_value" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_show_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#73000000"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:padding="@dimen/eight_dp_dimen"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fourteen_sp_dimen"
        android:textStyle="bold"
        tools:text="@string/title_popular" />


</android.support.v7.widget.CardView>