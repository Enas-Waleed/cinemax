<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/four_dp_dimen"
    android:layout_marginRight="@dimen/four_dp_dimen"
    android:layout_marginTop="@dimen/eight_dp_dimen"
    android:layout_marginBottom="@dimen/eight_dp_dimen"
    android:gravity="center">

    <ImageView
        android:id="@+id/actor_iv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:src="@drawable/actor"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/actor_name"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/six_dp_dimen"
        android:textColor="@android:color/black"/>

</LinearLayout>