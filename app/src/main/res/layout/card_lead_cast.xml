<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/lead_cast_horizontal_dimen"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/eight_dp_dimen"
    android:layout_marginLeft="@dimen/four_dp_dimen"
    android:layout_marginRight="@dimen/four_dp_dimen"
    android:layout_marginTop="@dimen/eight_dp_dimen"
    card_view:cardCornerRadius="@dimen/four_dp_dimen"
    android:elevation="@dimen/eight_dp_dimen"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/actor_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred_dp_dimen"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_movie" />

        <TextView
            android:id="@+id/actor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/actor_iv"
            android:layout_margin="@dimen/ten_dp_dimen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen_sp_dimen"
            android:maxLines="1"
            tools:text="@string/actor_name" />

    </RelativeLayout>

</android.support.v7.widget.CardView>