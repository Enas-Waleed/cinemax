<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="320dp"
    android:elevation="@dimen/eight_dp_dimen"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/four_dp_dimen"
    android:layout_marginRight="4dp"
    android:layout_marginTop="@dimen/eight_dp_dimen"
    android:layout_marginBottom="@dimen/eight_dp_dimen"
    card_view:cardCornerRadius="@dimen/two_dp_dimen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movie_poster_iv"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/poster" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/movie_poster_iv"
            android:paddingBottom="@dimen/six_dp_dimen"
            android:paddingLeft="@dimen/ten_dp_dimen"
            android:paddingRight="@dimen/ten_dp_dimen"
            android:paddingTop="@dimen/six_dp_dimen">

            <TextView
                android:id="@+id/movie_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="Fifty Shades Darker"
                android:layout_alignParentTop="true"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/movie_rating_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/two_dp_dimen"
                    android:textSize="12sp"
                    tools:text="@string/rating_value" />

                <ImageView
                    android:layout_width="@dimen/sixteen_dp_dimen"
                    android:layout_height="@dimen/sixteen_dp_dimen"
                    android:src="@drawable/ic_star_grey" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>