<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp_dimen"
    app:cardCornerRadius="@dimen/two_dp_dimen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_poster_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred_dp_dimen"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_movie" />

        <TextView
            android:id="@+id/movie_title_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp_dimen"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="@dimen/eight_dp_dimen"
            android:paddingRight="@dimen/eight_dp_dimen"
            android:textSize="@dimen/twelve_sp_dimen"
            android:textStyle="bold"
            tools:text="@string/actor_name" />

    </LinearLayout>

</android.support.v7.widget.CardView>

